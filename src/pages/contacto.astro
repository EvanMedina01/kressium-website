---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';
import '../styles/global.css';
---

<BaseLayout
  title="Contacto - Kressium"
  description="Contáctanos para resolver tus dudas. Email, teléfono y WhatsApp disponibles. Estamos listos para ayudarte."
>
  <Header />

  <main>
    <!-- Hero -->
    <section class="section-padding bg-gradient-to-br from-navy-50 to-white">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-navy-800 mb-6">
            Contáctanos
          </h1>
          <p class="text-xl text-steel-600">
            Estamos listos para ayudarte. Elige el medio de contacto que prefieras
          </p>
        </div>
      </div>
    </section>

    <!-- Información de Contacto -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto mb-16">
          <Card>
            <div class="text-center">
              <div class="w-16 h-16 bg-navy-100 rounded-full mx-auto mb-4 flex items-center justify-center">
                <svg class="w-8 h-8 text-navy-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-navy-800 mb-2">Email</h3>
              <div class="space-y-1">
                <p>
                  <a href="mailto:direccion@kressium.com" class="text-steel-600 hover:text-navy-800">
                    direccion@kressium.com
                  </a>
                </p>
                <p>
                  <a href="mailto:finanzas@kressium.com" class="text-steel-600 hover:text-navy-800">
                    finanzas@kressium.com
                  </a>
                </p>
                <p>
                  <a href="mailto:contacto@kressium.com" class="text-steel-600 hover:text-navy-800">
                    contacto@kressium.com
                  </a>
                </p>
              </div>
            </div>
          </Card>

          <Card>
            <div class="text-center">
              <div class="w-16 h-16 bg-navy-100 rounded-full mx-auto mb-4 flex items-center justify-center">
                <svg class="w-8 h-8 text-navy-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-navy-800 mb-2">Teléfono</h3>
              <div class="space-y-1">
                <p>
                  <a href="tel:2212547254" class="text-steel-600 hover:text-navy-800">
                    (221) 254-7254
                  </a>
                </p>
                <p>
                  <a href="tel:2226611039" class="text-steel-600 hover:text-navy-800">
                    (222) 661-1039
                  </a>
                </p>
              </div>
            </div>
          </Card>

          <Card>
            <div class="text-center">
              <div class="w-16 h-16 bg-navy-100 rounded-full mx-auto mb-4 flex items-center justify-center">
                <svg class="w-8 h-8 text-navy-800" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-navy-800 mb-2">WhatsApp</h3>
              <div class="space-y-2">
                <p>
                  <a href="https://wa.me/522212547254" target="_blank" rel="noopener noreferrer"
                     class="inline-block bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors text-sm">
                    José Edgar M.
                  </a>
                </p>
                <p>
                  <a href="https://wa.me/522226611039" target="_blank" rel="noopener noreferrer"
                     class="inline-block bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors text-sm">
                    Evan S. M.
                  </a>
                </p>
              </div>
            </div>
          </Card>
        </div>

        <!-- Horarios -->
        <div class="max-w-2xl mx-auto mb-16">
          <Card class="bg-steel-50">
            <div class="text-center">
              <h3 class="text-xl font-semibold text-navy-800 mb-4">Horario de Atención</h3>
              <p class="text-steel-600">
                <strong>Lunes a Viernes:</strong> 9:00 AM - 6:00 PM<br>
                <strong>Sábados:</strong> 9:00 AM - 2:00 PM (Previa cita)<br>
                <strong>Domingos:</strong> Cerrado
              </p>
              <p class="text-sm text-steel-500 mt-4">
                Tiempo de respuesta estimado: 24-48 horas hábiles
              </p>
            </div>
          </Card>
        </div>

        <!-- Formulario de Contacto -->
        <div class="max-w-2xl mx-auto">
          <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-navy-800 mb-4">
              Envíanos un mensaje
            </h2>
            <p class="text-steel-600">
              Completa el formulario y nos pondremos en contacto contigo
            </p>
          </div>

          <Card>
            <form action="https://formspree.io/f/xdagdvnp" method="POST" class="space-y-4">
              <input type="hidden" name="_form_type" value="contacto" />
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="nombre" class="block text-sm font-medium text-steel-700 mb-1">
                    Nombre Completo *
                  </label>
                  <input type="text" id="nombre" name="nombre" required
                    class="w-full px-4 py-2 border border-steel-300 rounded-md focus:ring-2 focus:ring-navy-500" />
                </div>
                <div>
                  <label for="empresa" class="block text-sm font-medium text-steel-700 mb-1">
                    Empresa
                  </label>
                  <input type="text" id="empresa" name="empresa"
                    class="w-full px-4 py-2 border border-steel-300 rounded-md focus:ring-2 focus:ring-navy-500" />
                </div>
              </div>

              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="email" class="block text-sm font-medium text-steel-700 mb-1">
                    Email *
                  </label>
                  <input type="email" id="email" name="email" required
                    class="w-full px-4 py-2 border border-steel-300 rounded-md focus:ring-2 focus:ring-navy-500" />
                </div>
                <div>
                  <label for="telefono" class="block text-sm font-medium text-steel-700 mb-1">
                    Teléfono *
                  </label>
                  <input type="tel" id="telefono" name="telefono" required
                    class="w-full px-4 py-2 border border-steel-300 rounded-md focus:ring-2 focus:ring-navy-500" />
                </div>
              </div>

              <div>
                <label for="asunto" class="block text-sm font-medium text-steel-700 mb-1">
                  Asunto *
                </label>
                <select id="asunto" name="asunto" required
                  class="w-full px-4 py-2 border border-steel-300 rounded-md focus:ring-2 focus:ring-navy-500">
                  <option value="">Selecciona una opción</option>
                  <option value="comprador">Soy comprador</option>
                  <option value="proveedor">Soy proveedor</option>
                  <option value="informacion">Solicitar información</option>
                  <option value="otro">Otro</option>
                </select>
              </div>

              <div>
                <label for="mensaje" class="block text-sm font-medium text-steel-700 mb-1">
                  Mensaje *
                </label>
                <textarea id="mensaje" name="mensaje" rows="5" required
                  class="w-full px-4 py-2 border border-steel-300 rounded-md focus:ring-2 focus:ring-navy-500"
                  placeholder="Cuéntanos en qué podemos ayudarte..."></textarea>
              </div>

              <div class="text-center pt-4">
                <Button type="submit" size="lg" class="w-full md:w-auto">
                  Enviar Mensaje
                </Button>
              </div>

              <p class="text-xs text-steel-600 text-center mt-4">
                Al enviar este formulario aceptas nuestro <a href="/privacidad" class="text-navy-800 hover:underline">Aviso de Privacidad</a>
              </p>
            </form>
          </Card>
        </div>
      </div>
    </section>

    <!-- Ubicación -->
    <section class="section-padding bg-steel-50">
      <div class="container-custom">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl font-bold text-navy-800 mb-4">
            Ubicación
          </h2>
          <p class="text-steel-600 mb-8">
            Operamos en México con alcance nacional.<br>
            Consulta disponibilidad en tu región.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button href="/compradores">
              Soy Comprador
            </Button>
            <Button href="/proveedores" variant="outline">
              Soy Proveedor
            </Button>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

