---
interface Props {
  title?: string;
  icon?: string;
  class?: string;
}

const { title, icon, class: className = '' } = Astro.props;
---

<div class={`bg-white border border-steel-200 rounded-lg p-6 hover:shadow-lg transition-shadow ${className}`}>
  {icon && (
    <div class="w-12 h-12 bg-navy-100 rounded-lg flex items-center justify-center mb-4">
      <span class="text-2xl">{icon}</span>
    </div>
  )}
  {title && <h3 class="text-xl font-semibold text-navy-800 mb-3">{title}</h3>}
  <div class="text-steel-600">
    <slot />
  </div>
</div>
