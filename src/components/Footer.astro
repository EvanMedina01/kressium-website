---
const currentYear = new Date().getFullYear();

const footerLinks = {
  empresa: [
    { name: 'Nosotros', href: '/nosotros' },
    { name: 'Servicios', href: '/servicios' },
    { name: 'Contacto', href: '/contacto' },
  ],
  clientes: [
    { name: 'Para Compradores', href: '/compradores' },
    { name: 'Para Proveedores', href: '/proveedores' },
  ],
  legal: [
    { name: 'Aviso de Privacidad', href: '/privacidad' },
    { name: 'Términos de Uso', href: '/terminos' },
  ],
};
---

<footer class="bg-navy-800 text-white">
  <div class="container-custom py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Brand -->
      <div>
        <img src="/logo.png" alt="Kressium" class="h-16 w-auto mb-4 brightness-0 invert" />
        <p class="text-steel-200 text-sm leading-relaxed">
          Conectamos proveedores y compradores con procesos claros y formales.
        </p>
      </div>

      <!-- Empresa -->
      <div>
        <h4 class="font-semibold mb-4">Empresa</h4>
        <ul class="space-y-2">
          {footerLinks.empresa.map((link) => (
            <li>
              <a href={link.href} class="text-steel-200 hover:text-white transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Clientes -->
      <div>
        <h4 class="font-semibold mb-4">Clientes</h4>
        <ul class="space-y-2">
          {footerLinks.clientes.map((link) => (
            <li>
              <a href={link.href} class="text-steel-200 hover:text-white transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contacto -->
      <div>
        <h4 class="font-semibold mb-4">Contacto</h4>
        <ul class="space-y-2 text-sm text-steel-200">
          <li>
            <a href="mailto:direccion@kressium.com" class="hover:text-white transition-colors">
              direccion@kressium.com
            </a>
          </li>
          <li>
            <a href="mailto:finanzas@kressium.com" class="hover:text-white transition-colors">
              finanzas@kressium.com
            </a>
          </li>
          <li>
            <a href="tel:2212547254" class="hover:text-white transition-colors">
              Tel. (221) 254-7254
            </a>
          </li>
          <li>
            <a href="tel:2226611039" class="hover:text-white transition-colors">
              Tel. (222) 661-1039
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Legal Links -->
    <div class="border-t border-navy-600 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-sm text-steel-300">
          © {currentYear} Kressium. Todos los derechos reservados.
        </p>
        <div class="flex space-x-6">
          {footerLinks.legal.map((link) => (
            <a href={link.href} class="text-sm text-steel-300 hover:text-white transition-colors">
              {link.name}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>
